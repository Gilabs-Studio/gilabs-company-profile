---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import BlogOverview from '../../components/blog/BlogOverview.astro';
import { blogData } from '../../data/blog';

export function getStaticPaths() {
  return [
    {params: {locale: 'en'}},
    {params: {locale: 'id'}},
  ];
}

const { locale } = Astro.params;
const blog = blogData[locale] || blogData['en'];
const pageTitle = locale === 'en' 
  ? `Blog - Insights & Updates | Gilabs Software House`
  : `Blog - Wawasan & Update | Gilabs Software House`;
const pageDescription = locale === 'en'
  ? 'Read our latest insights on web development, mobile apps, UI/UX design, SEO, and technology trends from Gilabs Software House.'
  : 'Baca wawasan terbaru kami tentang pengembangan web, aplikasi mobile, desain UI/UX, SEO, dan tren teknologi dari Gilabs Software House.';
---

<Layout lang={locale} title={pageTitle}>
  <Navbar lang={locale} />
  <main class="pt-20">
    <BlogOverview lang={locale} />
  </main>
  <Footer lang={locale} />
</Layout>

