---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Hero from '../../components/Hero.astro';
import Features from '../../components/Features.astro';
import About from '../../components/About.astro';
import Services from '../../components/Services.astro';
import PricingList from '../../components/PricingList.astro';
import RevisionSystem from '../../components/RevisionSystem.astro';
import ErpCrm from '../../components/ErpCrm.astro';
import CtaSection from '../../components/CtaSection.astro';
import Footer from '../../components/Footer.astro';

export function getStaticPaths() {
  return [
    {params: {locale: 'en'}},
    {params: {locale: 'id'}},
  ];
}

const { locale } = Astro.params;
---

<Layout lang={locale} title="Gilabs.id - Premium Software Agency">
  <Navbar lang={locale} />
  <main>
    <Hero lang={locale} />
    <Features lang={locale} />
    <About lang={locale} />
    <Services lang={locale} />
    <PricingList lang={locale} />
    <RevisionSystem lang={locale} />
    <ErpCrm lang={locale} />
    <CtaSection lang={locale} />
  </main>
  <Footer lang={locale} />
</Layout>
