---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Hero from '../../components/Hero.astro';
import Features from '../../components/Features.astro';
import About from '../../components/About.astro';
import Services from '../../components/Services.astro';
import Pricing from '../../components/Pricing.astro';
import CtaSection from '../../components/CtaSection.astro';
import Footer from '../../components/Footer.astro';

export function getStaticPaths() {
  return [
    {params: {locale: 'en'}},
    {params: {locale: 'id'}},
  ];
}

const { locale } = Astro.params;
const siteUrl = 'https://gilabs.id';
const canonical = locale === 'en' ? `${siteUrl}/en` : `${siteUrl}/${locale}`;
const description = locale === 'id' 
	? 'Agen Software Premium yang mengkhususkan diri dalam pengembangan web, aplikasi mobile, dan solusi digital. Transformasikan bisnis Anda dengan teknologi terkini.'
	: 'Premium Software Agency specializing in web development, mobile apps, and digital solutions. Transform your business with cutting-edge technology.';
---

<Layout 
	lang={locale} 
	title="Gilabs.id - Premium Software Agency"
	description={description}
	canonical={canonical}
>
  <Navbar lang={locale} />
  <main>
    <Hero lang={locale} />
    <Features lang={locale} />
    <About lang={locale} />
    <Services lang={locale} />
    <Pricing lang={locale} />
    <CtaSection lang={locale} />
  </main>
  <Footer lang={locale} />
</Layout>
