---
import { pricingData } from '../data/pricing';
import { RefreshCw, AlertCircle } from 'lucide-react';

const { lang } = Astro.props;
const t = pricingData[lang].revisionSystem;
---

<section class="py-20 relative">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-bold text-center mb-12">{t.title}</h2>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-background/40 backdrop-blur-sm p-8 rounded-2xl border border-border/50 shadow-sm hover:border-brand/50 transition-colors duration-300">
          <div class="flex items-center gap-3 mb-6">
            <div class="p-3 bg-brand/10 rounded-xl">
              <RefreshCw className="w-6 h-6 text-brand" />
            </div>
            <h3 class="text-xl font-bold">{t.small.title}</h3>
          </div>
          <ul class="space-y-3">
            {t.small.items.map(item => (
              <li class="flex items-start gap-3 text-sm text-muted-foreground">
                <span class="w-1.5 h-1.5 rounded-full bg-brand mt-2 shrink-0"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-background/40 backdrop-blur-sm p-8 rounded-2xl border border-border/50 shadow-sm hover:border-destructive/50 transition-colors duration-300">
          <div class="flex items-center gap-3 mb-6">
            <div class="p-3 bg-destructive/10 rounded-xl">
              <AlertCircle className="w-6 h-6 text-destructive" />
            </div>
            <h3 class="text-xl font-bold">{t.large.title}</h3>
          </div>
          <ul class="space-y-3">
            {t.large.items.map(item => (
              <li class="flex items-start gap-3 text-sm text-muted-foreground">
                <span class="w-1.5 h-1.5 rounded-full bg-destructive mt-2 shrink-0"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <div class="mt-8 p-6 bg-background/40 backdrop-blur-sm rounded-2xl border border-border/50 text-center">
        <p class="text-sm font-medium text-muted-foreground mb-4">{lang === 'en' ? 'Additional Revisions:' : 'Revisi Tambahan:'}</p>
        <div class="flex flex-wrap justify-center gap-4 md:gap-8">
          {t.extra.map(item => (
            <span class="inline-flex items-center px-4 py-1.5 rounded-full bg-secondary/50 border border-border/50 text-xs font-medium">
              {item}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
