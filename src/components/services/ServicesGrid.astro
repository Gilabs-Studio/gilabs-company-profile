---
import { pricingData } from '../../data/pricing';
import { LottieIcon } from '../ui/LottieIcon';

const { lang } = Astro.props;
const services = pricingData[lang].services;

const iconPaths = [
  '/icon/strategic-consulting.json',
  '/icon/enterprise-development.json',
  '/icon/discuss.json',
  '/icon/award.json',
  '/icon/strategic-consulting.json',
];
---

<section class="py-20 md:py-32 relative border-b border-border/50">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {services.items.map((service, index) => (
        <div class="bg-background/40 backdrop-blur-sm border border-border/50 rounded-2xl p-8 hover:border-brand/50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 flex flex-col h-full">
          <div class="mb-6 flex items-center justify-start">
            <LottieIcon 
              src={iconPaths[index]} 
              className="w-20 h-20"
              client:only="react"
            />
          </div>
          <h2 class="text-xl md:text-2xl font-bold mb-4 text-foreground leading-tight">
            {service.title}
          </h2>
          <p class="text-muted-foreground text-base leading-relaxed flex-grow mb-4">
            {service.body[0]}
          </p>
          <p class="text-sm text-brand font-medium">
            {service.tagline.replace('â†’ ', '')}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
