---
import { pricingData } from '../../data/pricing';
import { MessageCircle } from 'lucide-react';
import { getWhatsAppLink } from '../../lib/utils';

const { lang } = Astro.props;
const cta = pricingData[lang].ctaSection;
---

<section class="py-20 md:py-32 relative">
  <div class="container mx-auto px-4">
    <div class="bg-foreground text-background rounded-3xl p-12 md:p-24 text-center relative overflow-hidden shadow-2xl shadow-brand/20">
      {/* Background decoration */}
      <div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-20 pointer-events-none">
        <div class="absolute -top-1/2 -left-1/2 w-full h-full bg-brand/30 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-1/2 -right-1/2 w-full h-full bg-brand/30 rounded-full blur-3xl"></div>
      </div>

      <div class="relative z-10">
        <h2 class="text-3xl md:text-5xl font-bold mb-8 tracking-tight">{cta.title}</h2>
        <div class="space-y-2 text-lg md:text-xl text-background/80 mb-12 max-w-2xl mx-auto">
          {cta.subtitle.map(line => (
            <p>{line}</p>
          ))}
        </div>
        
        <a href={getWhatsAppLink('footer', lang)} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 px-8 py-4 bg-background text-foreground text-lg font-bold rounded-full hover:scale-105 transition-transform hover:shadow-lg hover:shadow-white/10">
          {cta.button}
          <MessageCircle className="w-5 h-5" />
        </a>
      </div>
    </div>
  </div>
</section>
