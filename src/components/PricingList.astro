---
import { pricingData } from '../data/pricing';
import { Check, Plus } from 'lucide-react';
import { getWhatsAppLink } from '../lib/utils';

const { lang } = Astro.props;
const t = pricingData[lang];
---

<section id="pricing" class="py-20 relative">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{lang === 'en' ? 'Website Packages' : 'Paket Website'}</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">
        {lang === 'en' ? 'Choose the perfect package for your business needs.' : 'Pilih paket yang sesuai dengan kebutuhan bisnis Anda.'}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 max-w-7xl mx-auto">
      {t.packages.map((pkg, index) => (
        <div class={`relative flex flex-col p-8 rounded-2xl border transition-all duration-300 ${index === 1 ? 'border-brand shadow-2xl shadow-brand/10 scale-105 z-10 bg-background/60 backdrop-blur-md' : 'border-border/50 bg-background/40 backdrop-blur-sm hover:border-brand/50'}`}>
          {index === 1 && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-brand text-white text-xs font-bold uppercase tracking-wider rounded-full shadow-lg shadow-brand/20">
              Most Popular
            </div>
          )}
          
          <div class="mb-8">
            <h3 class="text-xl font-bold mb-2">{pkg.title}</h3>
            <p class="text-sm text-muted-foreground mb-6 h-10">{pkg.description}</p>
            <div class="text-2xl font-bold text-foreground">{pkg.price}</div>
          </div>

          <div class="space-y-6 mb-8 flex-1">
            <div>
              <div class="text-xs font-semibold uppercase tracking-wider text-muted-foreground mb-3">Includes</div>
              <ul class="space-y-3">
                {pkg.features.map(feature => (
                  <li class="flex items-start gap-3 text-sm">
                    <Check className={`w-5 h-5 shrink-0 ${index === 1 ? 'text-brand' : 'text-muted-foreground'}`} />
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div>
              <div class="text-xs font-semibold uppercase tracking-wider text-muted-foreground mb-3">Revisions</div>
              <ul class="space-y-3">
                {pkg.revisions.map(rev => (
                  <li class="flex items-start gap-3 text-sm text-muted-foreground">
                    <span class={`w-1.5 h-1.5 rounded-full mt-2 shrink-0 ${index === 1 ? 'bg-brand' : 'bg-muted-foreground'}`}></span>
                    <span>{rev}</span>
                  </li>
                ))}
              </ul>
            </div>

            {pkg.addons && (
              <div>
                <div class="text-xs font-semibold uppercase tracking-wider text-muted-foreground mb-3">Add-ons Available</div>
                <ul class="space-y-2">
                  {pkg.addons.map(addon => (
                    <li class="flex items-start gap-2 text-xs text-muted-foreground">
                      <Plus className="w-3 h-3 mt-1 shrink-0" />
                      <span>{addon}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>

          <a href={getWhatsAppLink('pricing', lang)} target="_blank" rel="noopener noreferrer" class={`w-full py-3 px-6 rounded-xl font-bold text-center transition-all duration-200 ${index === 1 ? 'bg-brand text-white hover:bg-brand/90 shadow-lg shadow-brand/20' : 'bg-secondary/50 text-foreground hover:bg-secondary hover:text-brand'}`}>
            {lang === 'en' ? 'Select Plan' : 'Pilih Paket'}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
