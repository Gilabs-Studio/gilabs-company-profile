---
import { pricingData } from '../data/pricing';
import { Zap, Coffee, Code2, Music, Lightbulb, Moon, Sparkles } from 'lucide-react';
import ParallaxGallery from './ui/ParallaxGallery';

const { lang } = Astro.props;
const about = pricingData[lang].about;
const process = pricingData[lang].process;
const energy = pricingData[lang].energy;

// Gallery images - 20 unique images for 4 columns x 5 rows
const galleryImages = [
  // Column 1
  'https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=800&q=80',
  'https://images.unsplash.com/photo-1600880292203-757bb62b4baf?w=800&q=80',
  'https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?w=800&q=80',
  'https://images.unsplash.com/photo-1497215842964-222b430dc094?w=800&q=80',
  'https://images.unsplash.com/photo-1519389950473-47ba0277781c?w=800&q=80',
  // Column 2
  'https://images.unsplash.com/photo-1552664730-d307ca884978?w=800&q=80',
  'https://images.unsplash.com/photo-1531482615713-2afd69097998?w=800&q=80',
  'https://images.unsplash.com/photo-1542744173-8e7e53415bb0?w=800&q=80',
  'https://images.unsplash.com/photo-1606857521015-7f9fcf423571?w=800&q=80',
  'https://images.unsplash.com/photo-1522202176988-66273c2fd55f?w=800&q=80',
  // Column 3
  'https://images.unsplash.com/photo-1556761175-5973dc0f32e7?w=800&q=80',
  'https://images.unsplash.com/photo-1573164713714-d95e436ab8d6?w=800&q=80',
  'https://images.unsplash.com/photo-1553877522-43269d4ea984?w=800&q=80',
  'https://images.unsplash.com/photo-1521737711867-e3b97375f902?w=800&q=80',
  'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=800&q=80',
  // Column 4
  'https://images.unsplash.com/photo-1556761175-4b46a572b786?w=800&q=80',
  'https://images.unsplash.com/photo-1557804506-669a67965ba0?w=800&q=80',
  'https://images.unsplash.com/photo-1559136555-9303baea8ebd?w=800&q=80',
  'https://images.unsplash.com/photo-1515187029135-18ee286d815b?w=800&q=80',
  'https://images.unsplash.com/photo-1556761175-b413da4baf72?w=800&q=80',
];
---

<section id="about" class="relative border-b border-border/50">
  {/* Text Section - "Here's a sneak peek" */}
  <section id="sneak-peek">
    <div class="container mx-auto px-4">
    </div>
  </section>

  {/* Parallax Gallery Section */}
  <section id="design-showcase" class="relative bg-background flex items-center justify-center overflow-hidden z-10 w-full">
    <ParallaxGallery client:load images={galleryImages} />
  </section>

  <div class="container mx-auto px-4 py-20 md:py-32">
    {/* Process Section - Redesigned as Cards */}
    <div class="mb-32">
      <div class="text-center mb-16">
        <div class="inline-flex items-center justify-center p-3 bg-secondary/50 rounded-xl mb-6 backdrop-blur-sm">
          <Zap className="w-6 h-6 text-foreground" />
        </div>
        <h3 class="text-3xl md:text-4xl font-bold mb-4">{process.title}</h3>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">{process.subtitle}</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {process.body.map((step, index) => (
          <div class="bg-background/40 backdrop-blur-sm border border-border/50 p-8 rounded-2xl hover:border-brand/50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
            <span class="flex items-center justify-center w-12 h-12 rounded-full bg-brand/10 text-brand font-bold text-xl mb-6">
              {index + 1}
            </span>
            <p class="text-lg font-medium">{step}</p>
          </div>
        ))}
      </div>
    </div>

    {/* Energy Section */}
    <div class="relative">
      {/* Background with gradient */}
      <div class="bg-secondary/30 backdrop-blur-md rounded-3xl p-8 md:p-16 border border-white/10 relative overflow-hidden">
        <div class="absolute inset-0 bg-linear-to-br from-brand/5 via-transparent to-brand/5 opacity-50"></div>
        <div class="absolute top-0 right-0 w-64 h-64 bg-brand/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-brand/10 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>
        
        <div class="relative z-10">
          {/* Header */}
          <div class="text-center mb-12">
            <div class="inline-flex items-center justify-center gap-3 p-4 bg-background/40 backdrop-blur-sm rounded-2xl mb-6 border border-border/50">
              <Coffee className="w-6 h-6 text-brand" />
              <Code2 className="w-6 h-6 text-brand" />
            </div>
            <h3 class="text-3xl md:text-5xl font-bold mb-4 bg-linear-to-r from-foreground to-foreground/70 bg-clip-text text-transparent">
              {energy.title}
            </h3>
            <p class="font-medium mb-4 uppercase tracking-widest text-muted-foreground text-xs">{energy.subtitle}</p>
          </div>

          {/* Main Content */}
          <div class="max-w-4xl mx-auto mb-12">
            <div class="space-y-6 text-lg text-center mb-12">
              {energy.body.map((paragraph, index) => (
                <p class={index === 0 ? "text-xl md:text-2xl font-semibold text-foreground" : "text-muted-foreground leading-relaxed"}>
                  {paragraph}
                </p>
              ))}
            </div>

            {/* Vibe Cards Grid */}
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 mb-12">
              <div class="bg-background/60 backdrop-blur-sm border border-border/50 rounded-xl p-6 hover:border-brand/50 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
                <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-brand/10 mb-4 group-hover:bg-brand/20 transition-colors">
                  <Lightbulb className="w-6 h-6 text-brand" />
                </div>
                <h4 class="font-bold text-sm mb-2 uppercase tracking-wider text-foreground">
                  {lang === 'en' ? 'Curiosity' : 'Rasa Ingin Tahu'}
                </h4>
                <p class="text-xs text-muted-foreground leading-relaxed">
                  {lang === 'en' ? 'We ask questions. We explore. We learn.' : 'Kami bertanya. Kami menjelajah. Kami belajar.'}
                </p>
              </div>

              <div class="bg-background/60 backdrop-blur-sm border border-border/50 rounded-xl p-6 hover:border-brand/50 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
                <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-brand/10 mb-4 group-hover:bg-brand/20 transition-colors">
                  <Sparkles className="w-6 h-6 text-brand" />
                </div>
                <h4 class="font-bold text-sm mb-2 uppercase tracking-wider text-foreground">
                  {lang === 'en' ? 'Jokes & Fun' : 'Candaan & Fun'}
                </h4>
                <p class="text-xs text-muted-foreground leading-relaxed">
                  {lang === 'en' ? 'Laughter keeps us creative and connected.' : 'Tertawa membuat kami kreatif dan terhubung.'}
                </p>
              </div>

              <div class="bg-background/60 backdrop-blur-sm border border-border/50 rounded-xl p-6 hover:border-brand/50 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
                <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-brand/10 mb-4 group-hover:bg-brand/20 transition-colors">
                  <Moon className="w-6 h-6 text-brand" />
                </div>
                <h4 class="font-bold text-sm mb-2 uppercase tracking-wider text-foreground">
                  {lang === 'en' ? 'Late Nights' : 'Larut Malam'}
                </h4>
                <p class="text-xs text-muted-foreground leading-relaxed">
                  {lang === 'en' ? 'When the best ideas come alive.' : 'Saat ide terbaik muncul.'}
                </p>
              </div>

              <div class="bg-background/60 backdrop-blur-sm border border-border/50 rounded-xl p-6 hover:border-brand/50 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group">
                <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-brand/10 mb-4 group-hover:bg-brand/20 transition-colors">
                  <Music className="w-6 h-6 text-brand" />
                </div>
                <h4 class="font-bold text-sm mb-2 uppercase tracking-wider text-foreground">
                  {lang === 'en' ? 'Shared Vibes' : 'Vibe Bersama'}
                </h4>
                <p class="text-xs text-muted-foreground leading-relaxed">
                  {lang === 'en' ? 'Playlists that fuel our flow.' : 'Playlist yang memicu alur kerja kami.'}
                </p>
              </div>
            </div>
          </div>
          
          {/* CTA Button */}
          <div class="text-center">
            <a href="#contact" class="inline-flex items-center justify-center px-8 py-4 text-base font-bold text-white transition-all duration-200 bg-brand rounded-full hover:bg-brand/90 hover:shadow-lg hover:shadow-brand/20 hover:scale-105">
              {lang === 'en' ? 'Start Your Project' : 'Mulai Proyek Anda'}
            </a>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
