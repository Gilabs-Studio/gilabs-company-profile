---
import { pricingData } from '../data/pricing';
import { Database, BarChart3, Layers, Settings } from 'lucide-react';

const { lang } = Astro.props;
const t = pricingData[lang].erpCrm;
---

<section id="erp" class="py-20 relative">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{t.title}</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">{t.description}</p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      {/* CRM Section */}
      <div class="space-y-8">
        <div class="bg-background/40 backdrop-blur-sm border border-border/50 rounded-3xl p-8 h-full hover:border-brand/50 transition-colors duration-300">
          <div class="flex items-center gap-4 mb-6">
            <div class="p-3 bg-brand/10 rounded-xl">
              <BarChart3 className="w-8 h-8 text-brand" />
            </div>
            <div>
              <h3 class="text-2xl font-bold">{t.crm.title}</h3>
              <p class="text-sm text-muted-foreground">{t.crm.description}</p>
            </div>
          </div>

          <div class="space-y-6">
            {t.crm.packages.map((pkg) => (
              <div class="bg-white/5 rounded-xl p-6 border border-white/10 hover:bg-white/10 transition-colors">
                <div class="flex justify-between items-start mb-4">
                  <h3 class="font-bold text-lg">{pkg.name}</h3>
                  <span class="text-sm font-bold bg-secondary/50 px-3 py-1 rounded-full border border-border/50 shadow-sm">
                    {pkg.price}
                  </span>
                </div>
                <ul class="space-y-2 mb-4">
                  {pkg.features.map(feature => (
                    <li class="flex items-center gap-2 text-sm text-muted-foreground">
                      <div class="w-1.5 h-1.5 rounded-full bg-brand"></div>
                      {feature}
                    </li>
                  ))}
                </ul>
                {pkg.revisions && (
                  <div class="text-xs text-muted-foreground pt-3 border-t border-border/50">
                    <span class="font-medium">Revisions:</span> {pkg.revisions.join(', ')}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>

      {/* ERP Section */}
      <div class="space-y-8">
        <div class="bg-primary text-primary-foreground rounded-3xl p-8 h-full relative overflow-hidden shadow-2xl shadow-brand/20">
          <div class="absolute top-0 right-0 p-32 bg-brand/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
          
          <div class="relative z-10">
            <div class="flex items-center gap-4 mb-6">
              <div class="p-3 bg-white/10 rounded-xl backdrop-blur-sm">
                <Layers className="w-8 h-8 text-white" />
              </div>
              <div>
                <h3 class="text-2xl font-bold">{t.erp.title}</h3>
                <p class="text-sm text-primary-foreground/80">{t.erp.description}</p>
              </div>
            </div>

            <div class="space-y-4 mb-8">
              {t.erp.modules.map(module => (
                <div class="flex items-center gap-3 text-sm bg-white/5 p-3 rounded-lg border border-white/10 backdrop-blur-sm hover:bg-white/10 transition-colors">
                  <Settings className="w-4 h-4 shrink-0 opacity-70" />
                  <span>{module}</span>
                </div>
              ))}
            </div>

            <div class="bg-white/10 rounded-xl p-6 border border-white/10 backdrop-blur-md mb-6">
              <h3 class="font-bold mb-2">Full Package</h3>
              <p class="text-2xl font-bold">{t.erp.fullPackage.split(': ')[1]}</p>
            </div>

            <div class="space-y-2">
              {t.erp.revisions.map(rev => (
                <p class="text-xs text-primary-foreground/60 flex items-center gap-2">
                  <span class="w-1 h-1 bg-white rounded-full"></span>
                  {rev}
                </p>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
